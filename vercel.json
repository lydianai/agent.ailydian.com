{
  "buildCommand": "cp -r frontend public",
  "outputDirectory": "public",
  "rewrites": [
    { "source": "/", "destination": "/pages/index.html" },
    { "source": "/home", "destination": "/pages/index.html" },
    { "source": "/dashboard", "destination": "/pages/dashboard.html" },
    { "source": "/agents", "destination": "/pages/agents.html" },
    { "source": "/emergency", "destination": "/pages/emergency.html" },
    { "source": "/diagnosis", "destination": "/pages/diagnosis.html" },
    { "source": "/treatment", "destination": "/pages/treatment.html" },
    { "source": "/pharmacy", "destination": "/pages/pharmacy.html" },
    { "source": "/patients", "destination": "/pages/patients.html" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "X-Frame-Options", "value": "DENY" },
        { "key": "X-XSS-Protection", "value": "1; mode=block" },
        { "key": "Referrer-Policy", "value": "strict-origin-when-cross-origin" }
      ]
    },
    {
      "source": "/static/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    }
  ]
}
